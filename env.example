# SyntaxRAG Production Environment Configuration
# Copy this file to .env and configure your settings

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_PASSWORD=agent_recall_password_change_me
POSTGRES_PORT=5433

# ============================================================================
# OPENAI CONFIGURATION (REQUIRED)
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
SYNTAXRAG_PORT=8000
LOG_LEVEL=INFO
MAX_CONTENT_LENGTH=16777216

# ============================================================================
# NGINX CONFIGURATION (Optional - for production)
# ============================================================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# ============================================================================
# LANGSMITH CONFIGURATION (Optional - for debugging/monitoring)
# ============================================================================
LANGSMITH_TRACING_V2=false
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_key_here
LANGSMITH_PROJECT=SyntaxRAG
