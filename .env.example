# ============================================================================
# SyntaxRAG Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# 
# SECURITY WARNING: Never commit the actual .env file with real credentials!
# ============================================================================

# ============================================================================
# PostgreSQL Database Configuration
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=agent_recall
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# ============================================================================
# OpenAI API Configuration
# ============================================================================
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# ============================================================================
# Embedding Configuration
# ============================================================================
# Supported models: text-embedding-3-small (1536 dim), text-embedding-3-large (3072 dim)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ============================================================================
# Application Configuration
# ============================================================================
LOG_LEVEL=INFO
MAX_CONTENT_LENGTH=16777216
DEFAULT_TIMEOUT=300

# ============================================================================
# MCP Server Configuration
# ============================================================================
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_TRANSPORT=http

# ============================================================================
# Memory System Configuration
# ============================================================================
# Maximum number of memories to return in search
MAX_SEARCH_RESULTS=10

# Default similarity threshold for vector search (0.0 to 1.0)
DEFAULT_SIMILARITY_THRESHOLD=0.1

# Maximum chat log length for summarization
MAX_CHAT_LENGTH=50000

# ============================================================================
# Development/Testing (Optional)
# ============================================================================
# LANGSMITH_TRACING_V2=true
# LANGSMITH_ENDPOINT=https://api.smith.langchain.com
# LANGSMITH_API_KEY=your_langsmith_key_here
# LANGSMITH_PROJECT=SyntaxRAG


# ============================================================================
# Production Settings (Optional)
# ============================================================================
# Set these for production deployment
# ENVIRONMENT=production
# DEBUG=false
# ALLOWED_HOSTS=your-domain.com,localhost
# SECURE_SSL_REDIRECT=true
